
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}
@section head{
    <link href="/Content/Metarial-Dizayn/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <link href="/Content/Metarial-Dizayn/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Content/Ajax/jquery-1.10.0.min.js"></script>
}
@model EmlakCore.Web.Models.YetkiliProfilViewModel
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-xs-12 col-sm-3">
            <div class="card profile-card">
                <div class="profile-header">&nbsp;</div>
                <div class="profile-body">
                    <div class="image-area">
                        <img src="/Content/Metarial-Dizayn/images/user.png" alt="AdminBSB - Profile Image">
                    </div>
                    <div class="content-area">
                        <h3>@Model.YetkiliAd @Model.YetkiliSoyad</h3>

                    </div>
                </div>
                <div class="profile-footer">
                    <ul>
                        <li>
                            <span>Kiralık Emlak</span>
                            <span>0</span>
                        </li>
                        <li>
                            <span>Satılık Emlak</span>
                            <span>0</span>
                        </li>
                    </ul>
                </div>
            </div>
            <br />
            <br />
        </div>
      
        <div class="col-xs-12 col-sm-9">
            <div class="card">
                <div class="body">
                    <div>
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#profile_settings" aria-controls="settings" role="tab" data-toggle="tab" aria-expanded="true">Profil Ayarları</a></li>
                            <li role="presentation" class=""><a href="#change_password_settings" aria-controls="settings" role="tab" data-toggle="tab" aria-expanded="false">Şifre Değiştir</a></li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="profile_settings">
                                <form class="form-horizontal" method="post">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Ad</label>
                                        <div class="col-sm-10">
                                            <div class="form-line focused">
                                                <input type="text" class="form-control" id="NameSurname" asp-for="YetkiliAd" placeholder="Ad" minlength="2" maxlength="45" required="required">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Soyad</label>
                                        <div class="col-sm-10">
                                            <div class="form-line focused">
                                                <input type="text" class="form-control" id="Email" asp-for="YetkiliSoyad" placeholder="Soyad" minlength="2" maxlength="45" required="required">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Eposta</label>
                                        <div class="col-sm-10">
                                            <div class="form-line focused">
                                                <input type="email" class="form-control" placeholder="Eposta" asp-for="Eposta" minlength="10" maxlength="45" required="required">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button type="submit" class="btn btn-danger">Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="change_password_settings">
                                <form class="form-horizontal" asp-controller="TedarikciMusteri" asp-action="SifreDuzenle" method="post">
                                    <div class="form-group">
                                        <label for="OldPassword" class="col-sm-3 control-label">Eski Şifre</label>
                                        <div class="col-sm-9">
                                            <div class="form-line">
                                                <input type="password" class="form-control" id="OldPassword" placeholder="Eski Şifre" name="EskiSifre" maxlength="45" minlength="8" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="NewPassword" class="col-sm-3 control-label">Yeni Şifre</label>
                                        <div class="col-sm-9">
                                            <div class="form-line">
                                                <input type="password" class="form-control" id="NewPassword" name="YeniSifre" placeholder="Yeni Şifre" maxlength="45" minlength="8" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="NewPasswordConfirm" class="col-sm-3 control-label">Yeni Şifre Tekrar</label>
                                        <div class="col-sm-9">
                                            <div class="form-line">
                                                <input type="password" class="form-control" name="SifreTekrar" id="NewPasswordConfirm" placeholder="Yeni Şifre Tekrar" maxlength="45" minlength="8" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-offset-3 col-sm-9">
                                            <button type="submit" class="btn btn-danger">Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <div>
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#profile_settings" aria-controls="settings" role="tab" data-toggle="tab" aria-expanded="true">Şirket Ayarları</a></li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="profile_settings">
                                <form class="form-horizontal" method="post">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">İl</label>
                                        <div class="col-sm-10">
                                            <div class="form-line focused">
                                                <input type="text" class="form-control" id="NameSurname" asp-for="IsyeriAdresIl" placeholder="Ad" minlength="2" maxlength="45" required="required">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">İlçe</label>
                                        <div class="col-sm-10">
                                            <div class="form-line focused">
                                                <input type="text" class="form-control" id="Email" asp-for="IsyeriAdresIlce" placeholder="Soyad" minlength="2" maxlength="45" required="required">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Adres Detay</label>
                                        <div class="col-sm-10">
                                            <div class="form-line focused">
                                                <input type="email" class="form-control" placeholder="Eposta" asp-for="IsyeriAdresDetay" minlength="10" maxlength="45" required="required">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">İşyeri Telefon No</label>
                                        <div class="col-sm-10">
                                            <div class="form-line focused">
                                                <input type="text" class="form-control" id="Email" asp-for="IsyeriTelefonNo" placeholder="Telefon No" name="TelefonNo" minlength="10" maxlength="10" required="required">
                                            </div>
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button type="submit" class="btn btn-danger">Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section deneme{

    <script src="/Content/Metarial-Dizayn/plugins/bootstrap-select/js/bootstrap-select.js"></script>

    <script src="/Content/Metarial-Dizayn/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Colorpicker Js -->
    <script src="/Content/Metarial-Dizayn/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>

    <!-- Dropzone Plugin Js -->
    <script src="/Content/Metarial-Dizayn/plugins/dropzone/dropzone.js"></script>

    <!-- Input Mask Plugin Js -->
    <script src="/Content/Metarial-Dizayn/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>

    @*<script src="/Content/Metarial-Dizayn/js/admin.js"></script>*@

    <script src="/Content/Metarial-Dizayn/plugins/sweetalert/sweetalert.min.js"></script>

    <script src="/Content/Metarial-Dizayn/js/pages/ui/dialogs.js"></script>

}



